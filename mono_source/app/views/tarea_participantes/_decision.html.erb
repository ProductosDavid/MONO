<% content_for :modal do %>

    <%= form_for(@compuerta_pre_desicion, :html=> {:multipart=>true}) do |f| %>

        <input type="hidden" name="compuerta_desicion[tarea_id]" id="tarea_decision_tarea_id" value="0" />
        <input type="hidden" name="compuerta_desicion[usuario_id]" id="tarea_decision_usuario_id" value="<%= current_user.id %>" />

        <div id="tarea_decision" class="modal hide fade asociaciones " role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" xmlns="http://www.w3.org/1999/html">

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h3><%= t('.tomar_decision')%></h3>
          </div>

          <div class="modal-body">
            <div class="row-fluid">
              <div id="compuerta_titulo">

              </div>
              <div id="compuerta_descripcion" style="font-size: 12px; color: #aaa; font-style: italic;">

              </div>
              <fieldset>
                <div class="field" id="compuertum_options">

                </div>

                <div class="field">
                  <% #f.label :comentario, t('.comentario') %>
                  <% #f.text_area :comentario, :size => "20x5", :maxlength => 250 %>

                </div>
                <div class="field">
                </div>
              </fieldset>
            </div>
          </div>
          <div class="modal-footer">
            <div class="actions"  align=right >
              <input id="boton_aprobacion" class="btn primary"  name="commit" type="submit" value="<%= t('btnCrear')%>" />
              <button class="btn" data-dismiss="modal" aria-hidden="true"><%= t('btnCancelar') %></button>
            </div>
          </div>
        </div>
    <% end %>
<% end %>
